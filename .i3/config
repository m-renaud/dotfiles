set $ws2 workspace "2: workbench"
set $ws3 workspace "3: docs"
set $ws4 workspace "4: chat"
set $ws5 workspace "5: sys"
set $ws6 workspace "6:"
set $ws7 workspace "7:"
set $ws8 workspace "8:"
set $ws9 workspace "9: stash"
set $ws10 workspace "10: music"


