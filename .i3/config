# Mark Windows
bindsym $ctrl+$alt+space exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $ctrl+$alt+g exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Go to: '


# Workspaces
set $wsn1 1: web
